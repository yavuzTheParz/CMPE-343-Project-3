<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.ProfileController"
      spacing="15" fx:id="profileRoot">



    <Label text="Edit Profile ðŸ‘¤" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Separator/>

    <VBox spacing="5">
        <Label text="Username (Cannot be changed):" style="-fx-text-fill: #7f8c8d;"/>
        <TextField fx:id="usernameField" style="-fx-background-color: #ecf0f1;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Email:"/>
        <TextField fx:id="emailField"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Phone Number:"/>
        <TextField fx:id="phoneField" promptText="555-123-4567"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Delivery Address:"/>
        <TextArea fx:id="addressField" prefRowCount="3" promptText="Enter your full address here..."/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleClose" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Save Changes ðŸ’¾" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
