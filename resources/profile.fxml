<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.ProfileController"
      spacing="20" style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom right, #E0F2FE 0%, #BAE6FD 50%, #7DD3FC 100%); -fx-pref-width: 450;">

    <Label text="ðŸ‘¤ EDIT PROFILE" style="-fx-font-size: 28px; -fx-font-weight: 900; -fx-text-fill: #1E3A8A; -fx-effect: dropshadow(gaussian, rgba(59,130,246,0.3), 10, 0, 0, 3);"/>
    <Separator style="-fx-opacity: 0.3;"/>

    <VBox spacing="18" style="-fx-padding: 25; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5);">
        <VBox spacing="8">
            <Label text="Username (Cannot be changed):" style="-fx-text-fill: #7f8c8d;"/>
            <TextField fx:id="usernameField" style="-fx-background-color: #ecf0f1;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Email:"/>
            <TextField fx:id="emailField"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Phone Number:"/>
            <TextField fx:id="phoneField" promptText="555-123-4567"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Delivery Address:"/>
            <TextArea fx:id="addressField" prefRowCount="3" promptText="Enter your full address here..."/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Cancel" onAction="#handleClose" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button text="Save Changes ðŸ’¾" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</VBox>