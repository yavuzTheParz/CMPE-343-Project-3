<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.MyOrdersController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);">

    <!-- Header Section -->
    <HBox alignment="CENTER" spacing="15" styleClass="glass-card" style="-fx-padding: 20;">
        <Label text="ðŸ“¦" style="-fx-font-size: 36px;"/>
        <VBox spacing="3">
            <Label text="My Order History" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #1E3A8A;"/>
            <Label text="Track and manage your orders" style="-fx-font-size: 12px; -fx-text-fill: rgba(44,62,80,0.7); -fx-font-weight: 600;"/>
        </VBox>
    </HBox>
    
    <!-- Orders Table -->
    <VBox spacing="12" styleClass="glass-card" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
        <Label text="ðŸ“‹ Your Orders" style="-fx-font-size: 18px; -fx-font-weight: 900; -fx-text-fill: #1E3A8A;"/>
        <TableView fx:id="ordersTable" styleClass="modern-table" VBox.vgrow="ALWAYS" prefHeight="400">
            <columns>
                <TableColumn fx:id="colOrderId" text="Order #" prefWidth="80"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                <TableColumn fx:id="colTotal" text="Total (TL)" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                <TableColumn fx:id="colCarrier" text="Carrier" prefWidth="120"/>
                <TableColumn fx:id="colCompletion" text="Completed At" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 5 0 0 0;">
        <Button text="â­ Rate Carrier" onAction="#handleRateCarrier" styleClass="nav-button" style="-fx-background-color: rgba(251, 191, 36, 0.9); -fx-text-fill: #1E293B; -fx-padding: 10 20;"/>
        <Button text="ðŸ“„ Download Invoice" onAction="#handleDownloadInvoice" styleClass="nav-button" style="-fx-background-color: rgba(59, 130, 246, 0.9); -fx-text-fill: white; -fx-padding: 10 20;"/>
        <Button text="âŒ Cancel Order" onAction="#handleCancelOrder" styleClass="danger-button" style="-fx-padding: 10 20;"/>
    </HBox>

</VBox>