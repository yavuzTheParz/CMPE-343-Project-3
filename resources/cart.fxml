<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.CartController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="My Shopping Cart ðŸ›’" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" prefHeight="250">
        <columns>
            <TableColumn fx:id="colName" text="Product Name" prefWidth="150"/>
            <TableColumn fx:id="colQuantity" text="Quantity (kg)" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price (TL)" prefWidth="100"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>

    <Separator />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ðŸ“… Delivery Date:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="deliveryDatePicker" prefWidth="120"/>
        <ComboBox fx:id="deliveryTimeBox" prefWidth="100"/>
    </HBox>

    <Separator />

    <VBox spacing="5" alignment="CENTER_RIGHT">
        <Label fx:id="discountLabel" text="Discount: 0.0 TL" style="-fx-text-fill: #27ae60;"/>
        <Label fx:id="totalLabel" text="Total: 0.0 TL" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Remove Item" onAction="#handleRemove" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Checkout &amp; Pay" onAction="#handleCheckout" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

</VBox>