<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.CartController"
      spacing="25" style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom right, #F3E8FF 0%, #E9D5FF 50%, #D8B4FE 100%);">

    <styleClass>
        <String fx:value="header-pad" />
    </styleClass>

    <!-- Header Section with Icon -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5);">
        <VBox>
            <Label text="ðŸ›’" style="-fx-font-size: 36px;"/>
        </VBox>
        <VBox spacing="5">
            <Label text="My Shopping Cart" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                <styleClass>
                    <String fx:value="title-label" />
                </styleClass>
            </Label>
            <Label text="Review your items and checkout" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <VBox alignment="CENTER_RIGHT">
            <Label fx:id="totalLabel" text="Total: 0.0 TL" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27AE60;">
                <styleClass>
                    <String fx:value="title-label" />
                </styleClass>
            </Label>
            <Label fx:id="discountLabel" text="Discount: 0.0 TL" style="-fx-font-size: 13px; -fx-text-fill: #E74C3C; -fx-font-weight: 600;">
                <styleClass>
                    <String fx:value="muted-label" />
                </styleClass>
            </Label>
        </VBox>
    </HBox>

    <!-- Cart Items Table with Modern Styling -->
    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0, 0, 4);">
        <Label text="Cart Items" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" prefHeight="300" style="-fx-background-radius: 12;">
            <styleClass>
                <String fx:value="modern-table" />
            </styleClass>
            <columns>
                <TableColumn fx:id="colName" text="Product Name" prefWidth="150"/>
                <TableColumn fx:id="colQuantity" text="Quantity (kg)" prefWidth="100"/>
                <TableColumn fx:id="colPrice" text="Price (TL)" prefWidth="100"/>
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Delivery Details Card -->
    <HBox spacing="20" style="-fx-padding: 25; -fx-background-color: white; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0, 0, 4);">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="ðŸ“… Delivery Date" style="-fx-font-weight: 700; -fx-font-size: 14px; -fx-text-fill: #2C3E50;">
                <styleClass>
                    <String fx:value="muted-label" />
                </styleClass>
            </Label>
            <DatePicker fx:id="deliveryDatePicker" prefWidth="200" style="-fx-padding: 10; -fx-background-radius: 10;"/>
        </VBox>
        
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="ðŸ• Delivery Time" style="-fx-font-weight: 700; -fx-font-size: 14px; -fx-text-fill: #2C3E50;">
                <styleClass>
                    <String fx:value="muted-label" />
                </styleClass>
            </Label>
            <ComboBox fx:id="deliveryTimeBox" prefWidth="150" style="-fx-padding: 8; -fx-background-radius: 10;"/>
        </VBox>
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="âŒ Remove Selected" onAction="#handleRemove" style="-fx-padding: 16 32; -fx-font-size: 15px; -fx-background-radius: 12; -fx-cursor: hand;">
            <styleClass>
                <String fx:value="danger-button" />
            </styleClass>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ’³ Proceed to Checkout" onAction="#handleCheckout" style="-fx-padding: 16 40; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;">
            <styleClass>
                <String fx:value="primary-button" />
            </styleClass>
        </Button>
    </HBox>

</VBox>