<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="main.controllers.CarrierController"
            prefWidth="1000" prefHeight="700">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #e67e22; -fx-padding: 15;">
            <Label text="Carrier Dashboard ðŸ›µ" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" text="Welcome" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">
            
            <Tab text="Available Orders (Pending) ðŸ†•">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Label text="Select an order to deliver:" style="-fx-font-style: italic;"/>
                    <TableView fx:id="availableTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAvId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colAvCustomer" text="Customer" prefWidth="100"/>
                            <TableColumn fx:id="colAvAddress" text="Address" prefWidth="200"/>
                            <TableColumn fx:id="colAvProducts" text="Product List" prefWidth="250"/>
                            <TableColumn fx:id="colAvTotal" text="Total (TL)" prefWidth="80"/>
                            <TableColumn fx:id="colAvDate" text="Req. Date" prefWidth="120"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                    <Button text="Take Selected Order ðŸ‘‡" onAction="#handleTakeOrder" 
                            maxWidth="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                </VBox>
            </Tab>

            <Tab text="My Active Deliveries ðŸ“¦">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Label text="Orders currently in your bag:" style="-fx-font-style: italic;"/>
                    <TableView fx:id="currentTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCurId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colCurCustomer" text="Customer" prefWidth="100"/>
                            <TableColumn fx:id="colCurAddress" text="Delivery Address" prefWidth="250"/>
                            <TableColumn fx:id="colCurProducts" text="Products" prefWidth="250"/>
                            <TableColumn fx:id="colCurTotal" text="Collect (TL)" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                    <Button text="Complete Delivery &amp; Collect Money âœ…" onAction="#handleCompleteDelivery" 
                            maxWidth="Infinity" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                </VBox>
            </Tab>

            <Tab text="Completed History ðŸ“œ">
                <TableView fx:id="completedTable" style="-fx-padding: 10;">
                    <columns>
                        <TableColumn fx:id="colComId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colComCustomer" text="Customer" prefWidth="150"/>
                        <TableColumn fx:id="colComTotal" text="Amount Earned" prefWidth="100"/>
                        <TableColumn fx:id="colComDate" text="Completed At" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                </TableView>
            </Tab>

        </TabPane>
    </center>

</BorderPane>