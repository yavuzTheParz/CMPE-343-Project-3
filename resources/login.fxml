<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.LoginController"
      alignment="CENTER" spacing="15" 
      style="-fx-background-color: #ecf0f1; -fx-padding: 30;">

    <Label text="GreenGrocer Login ðŸ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

    <VBox spacing="5" maxWidth="300">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter username"/>
    </VBox>

    <VBox spacing="5" maxWidth="300">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"/>
    </VBox>

    <Button text="Login" onAction="#handleLogin" 
            maxWidth="300" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;"/>

    <Hyperlink text="No account? Register here" onAction="#handleRegister" 
               style="-fx-text-fill: #2980b9;"/>

</VBox>