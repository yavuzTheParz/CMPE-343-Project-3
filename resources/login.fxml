<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="main.controllers.LoginController"
      alignment="CENTER" spacing="15" 
      style="-fx-padding: 40; -fx-background-color: #ecf0f1;">

    <Label text="Greengrocer Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" 
            maxWidth="250"/>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>

</VBox>