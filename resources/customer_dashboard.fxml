<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="main.controllers.CustomerController"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox>
                    <Label text="Local Greengrocer Market" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Fresh Fruits &amp; Vegetables Daily" 
                           style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button text="My Orders ðŸ“¦" onAction="#openMyOrders" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                <Button text="Open Cart ðŸ›’" onAction="#openCartScreen" 
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
            </HBox>

            <Separator />

            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="ðŸ” Search:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="searchField" promptText="Type product name..." prefWidth="250"/>
                
                <Label text="Filter by:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="categoryFilter" prefWidth="150" promptText="All Categories"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn fx:id="colName" text="Name" prefWidth="250"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="150"/>
                <TableColumn fx:id="colPrice" text="Price ($/kg)" prefWidth="120"/>
                <TableColumn fx:id="colStock" text="Stock (kg)" prefWidth="120"/>
            </columns>
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button text="Add to Cart âž•" onAction="#handleAddToCart" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"/>
        </HBox>
    </bottom>

</BorderPane>